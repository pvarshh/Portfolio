---
import Section from "../Section.astro";
import { education } from "@cv";
---

<Section className={Astro.props.className} title="Education">
	<ul class="space-y-4 py-3 print:space-y-0">
		{
			education.map(({ institution, startDate, endDate, area, url, courses, current, planned }) => {

				return (
					<div class="flex flex-col gap-2">
						<div class="flex items-baseline">
							<div class="relative w-full items-baseline justify-between gap-2">
								<h3 class="mr-6 items-baseline gap-x-2 gap-y-0.5 font-medium">
									<a target="_blank" class="hover:text-skin-hue group flex items-center gap-[6px] decoration-dotted underline-offset-[5px] hover:underline" href={url}>
										{institution}
									</a>
								</h3>
								<div class="text-sm text-skin-muted">{area}</div>
							</div>
						</div>
						{courses && courses.length > 0 && (
							<div class="ml-7 md:ml-9">
								<h4 class="mb-1 text-sm font-medium text-skin-base">Notable Courses:</h4>
								<ul class="flex flex-col space-y-1 text-sm text-skin-muted">
									{courses.map((course) => (
										(course.url != null) ? ( <li> • <a href={course.url} title={`Ver ${course.name}`} target="_blank">{course.name}</a> </li> ) : ( <li> • {course.name} </li> )
									))}
								</ul>
							</div>
						)}
						{current && current.length > 0 && (
							<div class="ml-7 md:ml-9">
								<h4 class="mb-1 text-sm font-medium text-skin-base">Current Courses (W25):</h4>
								<ul class="flex flex-col space-y-1 text-sm text-skin-muted">
									{current.map((course) => (
										(course.url != null) ? ( <li> • <a href={course.url} title={`Ver ${course.name}`} target="_blank">{course.name}</a> </li> ) : ( <li> • {course.name} </li> )
									))}
								</ul>
							</div>
						)}
						{planned && planned.length > 0 && (
							<div class="ml-7 md:ml-9">
								<h4 class="mb-1 text-sm font-medium text-skin-base">Planned Courses (S25):</h4>
								<ul class="flex flex-col space-y-1 text-sm text-skin-muted">
									{planned.map((course) => (
										(course.url != null) ? ( <li> • <a href={course.url} title={`Ver ${course.name}`} target="_blank">{course.name}</a> </li> ) : ( <li> • {course.name} </li> )
									))}
								</ul>
							</div>
						)}
					</div>
				);
			})
		}
	</ul>
</Section>